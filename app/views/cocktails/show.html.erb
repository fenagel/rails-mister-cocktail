<div class="container pt-2">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @cocktail.photo.key %>');">
    <div class="banner-content">
    <h1><%= @cocktail.name %></h1>
    </div>
  </div>
  <%= link_to "Back to all cocktails", root_path %>
  <div class="row">
    <div class="col-sm-12 col-md-6 pt-5">
      <h3>Recipe</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Ingredient</th>
            <th>Description</th>
            <th>Action</th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>
              <td>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-12 col-md-6 pt-5">
      <%= link_to "new dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
    </div>
  </div>
